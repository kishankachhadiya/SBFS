<% if current_user %>
<% vote_text = current_user&.voted_for?(listing) ? "No longer interested" : "Yes, I'm interested!" %>

<%= link_to vote_text, like_listing_path(listing), method: :put, remote: :true, class: 'like-post' %>
<% else %>
<%= link_to "Yes, I'm interested!", new_user_session_path, class: 'like-post' %>
<% end %>